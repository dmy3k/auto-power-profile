<?xml version="1.0" encoding="UTF-8"?>
<interface domain="org.gnome.shell.extensions.auto-power-profile">
    <template class="AutoPowerProfileGeneralPrefs" parent="AdwPreferencesPage">
        <property name="name">general</property>
        <property name="title" translatable="yes">General</property>
        <property name="icon-name">view-list-symbolic</property>
        <child>
            <object class="AdwPreferencesGroup" id="ui_group">
                <property name="title" translatable="yes">Default Profiles</property>
                <property name="description" translatable="yes">Applied automatically unless user sets manually another one</property>

                <child>
                    <object class="AdwComboRow" id="ac_profile">
                        <property name="title" translatable="yes">On AC</property>
                        <property name="subtitle" translatable="yes">Select the default profile when connected to AC</property>
                        <property name="model">platform_profile_model</property>
                    </object>
                </child>

                <child>
                    <object class="AdwComboRow" id="bat_profile">
                        <property name="title" translatable="yes">On Battery</property>
                        <property name="subtitle" translatable="yes">Select the default profile when running on battery</property>
                        <property name="model">platform_profile_model</property>
                    </object>
                </child>
            </object>
        </child>

        <child>
            <object class="AdwPreferencesGroup">

                <child>
                    <object class="AdwSpinRow" id="threshold">
                        <property name="title" translatable="yes">Power Saving Threshold</property>
                        <property name="subtitle" translatable="yes">Switch to power saving profile when the battery level drops below</property>
                        <property name="adjustment">threshold_adjustment</property>
                        <property name="numeric">True</property>
                        <property name="snap-to-ticks">True</property>
                        <property name="update-policy">if-valid</property>
                    </object>
                </child>
            </object>
        </child>

        <child>
            <object class="AdwPreferencesGroup">
                <property name="title" translatable="yes">Advanced</property>
                <property name="description" translatable="yes">Compatibility and troubleshooting</property>

                <child>
                    <object class="AdwExpanderRow" id="row_ppd">
                        <property name="title" translatable="true">Power Profiles Daemon</property>
                        <property name="subtitle">Required for extenstion to operate</property>

                        <child>
                            <object class="AdwActionRow" id="row_version">
                                <child type="prefix">
                                    <object class="GtkImage" id="version_icon">
                                        <property name="icon_name">emblem-important-symbolic</property>
                                    </object>
                                </child>
                                <property name="title" translatable="true">Installed Version</property>
                                <child>
                                    <object class="GtkLabel" id="ppd_version_label">
                                        <property name="width-chars">4</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object class="AdwActionRow" id="row_platform_driver">
                                <child type="prefix">
                                    <object class="GtkImage" id="platform_driver_icon">
                                        <property name="icon_name">emblem-important-symbolic</property>
                                    </object>
                                </child>
                                <property name="title" translatable="true">Platform Driver</property>
                                <child>
                                    <object class="GtkLabel" id="platform_driver_label"></object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object class="AdwActionRow" id="row_cpu_driver">
                                <child type="prefix">
                                    <object class="GtkImage" id="cpu_driver_icon">
                                        <property name="icon_name">emblem-important-symbolic</property>
                                    </object>
                                </child>
                                <property name="title" translatable="true">CPU Driver</property>
                                <child>
                                    <object class="GtkLabel" id="cpu_driver_label"></object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>

                <child>
                    <object class="AdwActionRow">
                        <property name="title" translatable="yes">Debug logging</property>
                        <property name="subtitle" translatable="yes">Enable detailed logs for troubleshooting</property>
                        <property name="activatable-widget">debug_logging</property>
                        <child>
                            <object class="GtkSwitch" id="debug_logging">
                                <property name="valign">center</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>

    </template>

    <object class="GtkStringList" id="platform_profile_model"></object>

    <object class="GtkAdjustment" id="threshold_adjustment">
        <property name="page-increment">5.0</property>
        <property name="step-increment">1.0</property>
        <property name="upper">99.0</property>
        <property name="lower">0.0</property>
        <property name="value">25.0</property>
    </object>
</interface>
